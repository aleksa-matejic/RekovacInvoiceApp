<BorderPane prefHeight="400.0" xmlns="http://javafx.com/javafx/8.0.171" xmlns:fx="http://javafx.com/fxml/1" fx:controller="invoiceApp.invoiceController">
    <center>
        <TabPane prefHeight="200.0" prefWidth="600.0" tabClosingPolicy="UNAVAILABLE">
            <tabs>
                <Tab text="Korisnici">
                    <content>
                        <BorderPane>
                            <center>
                                <TableView fx:id="tvKorisnik" prefHeight="200.0" prefWidth="200.0">
                                    <columns>
                                        <TableColumn fx:id="colIdKorisnik" prefWidth="75.0" text="idKorisnik" />
                                        <TableColumn fx:id="colImeKor" prefWidth="75.0" text="Ime" />
                                        <TableColumn fx:id="colPostaKor" prefWidth="75.0" text="Pošta" />
                                        <TableColumn fx:id="colMestoKor" prefWidth="75.0" text="Mesto" />
                                        <TableColumn fx:id="colAdresaKor" prefWidth="75.0" text="Adresa" />
                                        <TableColumn fx:id="colPibKor" prefWidth="75.0" text="PIB" />
                              <TableColumn fx:id="colDug" prefWidth="75.0" text="Dug iz prethodnog perioda" />
                                    </columns>
                           <cursor>
                              <Cursor fx:constant="HAND" />
                           </cursor>
                                </TableView>
                            </center>
                     <top>
                        <GridPane BorderPane.alignment="CENTER">
                          <columnConstraints>
                            <ColumnConstraints hgrow="SOMETIMES" maxWidth="-Infinity" />
                              <ColumnConstraints hgrow="SOMETIMES" maxWidth="-Infinity" />
                            <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0" />
                              <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0" />
                              <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0" />
                              <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0" />
                          </columnConstraints>
                          <rowConstraints>
                            <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                            <RowConstraints vgrow="SOMETIMES" />
                            <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                          </rowConstraints>
                           <children>
                              <Button fx:id="btnDodajKorisnika" maxWidth="-Infinity" minWidth="-Infinity" mnemonicParsing="false" text="Dodaj korisnika" GridPane.rowIndex="1">
                                 <graphic>
                                    <ImageView fitHeight="24.0" fitWidth="24.0" pickOnBounds="true" preserveRatio="true">
                                       <image>
                                          <Image url="@../images/icons8-add-user-64.png" />
                                       </image>
                                    </ImageView>
                                 </graphic>
                                 <cursor>
                                    <Cursor fx:constant="HAND" />
                                 </cursor></Button>
                              <Button fx:id="btnOsvezi" maxWidth="-Infinity" minWidth="-Infinity" mnemonicParsing="false" text="Osveži" GridPane.columnIndex="1" GridPane.rowIndex="1">
                                 <graphic>
                                    <ImageView fitHeight="24.0" fitWidth="24.0" pickOnBounds="true" preserveRatio="true">
                                       <image>
                                          <Image url="@../images/icons8-refresh-24.png" />
                                       </image>
                                    </ImageView>
                                 </graphic>
                                 <cursor>
                                    <Cursor fx:constant="HAND" />
                                 </cursor></Button>
                           </children>
                        </GridPane>
                     </top>
                        </BorderPane>
                    </content>
               <graphic>
                  <ImageView fitHeight="24.0" fitWidth="24.0" pickOnBounds="true" preserveRatio="true">
                     <image>
                        <Image url="@../images/icons8-users-64.png" />
                     </image>
                  </ImageView>
               </graphic>
                </Tab>
            <Tab text="Firma">
               <content>
                  <BorderPane>
                     <top>
                        <GridPane BorderPane.alignment="CENTER">
                          <columnConstraints>
                            <ColumnConstraints hgrow="SOMETIMES" maxWidth="-Infinity" minWidth="-Infinity" />
                              <ColumnConstraints hgrow="SOMETIMES" />
                            <ColumnConstraints hgrow="SOMETIMES" maxWidth="-Infinity" minWidth="-Infinity" />
                              <ColumnConstraints hgrow="SOMETIMES" />
                              <ColumnConstraints hgrow="SOMETIMES" maxWidth="-Infinity" minWidth="-Infinity" />
                              <ColumnConstraints hgrow="SOMETIMES" />
                          </columnConstraints>
                          <rowConstraints>
                            <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                              <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                            <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                            <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                          </rowConstraints>
                           <children>
                              <Label maxWidth="-Infinity" minWidth="-Infinity" text="idFirma" />
                              <Label maxWidth="-Infinity" minWidth="-Infinity" text="Ime firme" GridPane.rowIndex="1" />
                              <Label maxWidth="-Infinity" minWidth="-Infinity" text="Pošta" GridPane.rowIndex="2" />
                              <Label maxWidth="-Infinity" minWidth="-Infinity" text="Mesto" GridPane.rowIndex="3" />
                              <Label maxWidth="-Infinity" minWidth="-Infinity" text="Adresa" GridPane.columnIndex="2" />
                              <Label maxWidth="-Infinity" minWidth="-Infinity" text="Matični broj" GridPane.columnIndex="2" GridPane.rowIndex="1" />
                              <Label maxWidth="-Infinity" minWidth="-Infinity" text="PIB" GridPane.columnIndex="2" GridPane.rowIndex="2" />
                              <Label maxWidth="-Infinity" minWidth="-Infinity" text="Šifra delatnosti" GridPane.columnIndex="2" GridPane.rowIndex="3" />
                              <Label maxWidth="-Infinity" minWidth="-Infinity" text="Tekući račun" GridPane.columnIndex="4" />
                              <Label maxWidth="-Infinity" minWidth="-Infinity" text="Kod banke" GridPane.columnIndex="4" GridPane.rowIndex="1" />
                              <Label maxWidth="-Infinity" minWidth="-Infinity" text="Email" GridPane.columnIndex="4" GridPane.rowIndex="2" />
                              <TextField fx:id="tfIdFirma" GridPane.columnIndex="1" />
                              <TextField fx:id="tfImeFirme" GridPane.columnIndex="1" GridPane.rowIndex="1" />
                              <TextField fx:id="tfPosta" GridPane.columnIndex="1" GridPane.rowIndex="2" />
                              <TextField fx:id="tfMesto" GridPane.columnIndex="1" GridPane.rowIndex="3" />
                              <TextField fx:id="tfAdresa" GridPane.columnIndex="3" />
                              <TextField fx:id="tfMaticniBroj" GridPane.columnIndex="3" GridPane.rowIndex="1" />
                              <TextField fx:id="tfPib" GridPane.columnIndex="3" GridPane.rowIndex="2" />
                              <TextField fx:id="tfSifraDelatnosti" GridPane.columnIndex="3" GridPane.rowIndex="3" />
                              <TextField fx:id="tfTekuciRacun" GridPane.columnIndex="5" />
                              <TextField fx:id="tfKodBanke" GridPane.columnIndex="5" GridPane.rowIndex="1" />
                              <TextField fx:id="tfEmail" GridPane.columnIndex="5" GridPane.rowIndex="2" />
                           </children>
                        </GridPane>
                     </top>
                     <center>
                        <GridPane maxHeight="-Infinity" BorderPane.alignment="TOP_LEFT">
                          <columnConstraints>
                            <ColumnConstraints hgrow="SOMETIMES" maxWidth="-Infinity" />
                            <ColumnConstraints hgrow="SOMETIMES" maxWidth="-Infinity" />
                              <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0" />
                              <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0" />
                              <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0" />
                              <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0" />
                          </columnConstraints>
                          <rowConstraints>
                              <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                              <RowConstraints vgrow="SOMETIMES" />
                              <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                            <RowConstraints vgrow="SOMETIMES" />
                          </rowConstraints>
                           <children>
                              <Button fx:id="btnUrediFirmu" maxWidth="-Infinity" minWidth="-Infinity" mnemonicParsing="false" text="Uredi firmu" GridPane.rowIndex="1">
                                 <graphic>
                                    <ImageView fitHeight="24.0" fitWidth="24.0" pickOnBounds="true" preserveRatio="true">
                                       <image>
                                          <Image url="@../images/icons8-edit-50.png" />
                                       </image>
                                    </ImageView>
                                 </graphic>
                                 <cursor>
                                    <Cursor fx:constant="HAND" />
                                 </cursor></Button>
                              <Button fx:id="btnSacuvajPromene" maxHeight="-Infinity" minWidth="-Infinity" mnemonicParsing="false" text="Sačuvaj promene" GridPane.columnIndex="1" GridPane.rowIndex="1">
                                 <graphic>
                                    <ImageView fitHeight="24.0" fitWidth="24.0" pickOnBounds="true" preserveRatio="true">
                                       <image>
                                          <Image url="@../images/icons8-save-50.png" />
                                       </image>
                                    </ImageView>
                                 </graphic>
                                 <cursor>
                                    <Cursor fx:constant="HAND" />
                                 </cursor></Button>
                           </children>
                        </GridPane>
                     </center>
                  </BorderPane>
               </content>
               <graphic>
                  <ImageView fitHeight="24.0" fitWidth="24.0" pickOnBounds="true" preserveRatio="true">
                     <image>
                        <Image url="@../images/icons8-company-50.png" />
                     </image>
                  </ImageView>
               </graphic>
            </Tab>
            </tabs>
        </TabPane>
    </center>
</BorderPane>
