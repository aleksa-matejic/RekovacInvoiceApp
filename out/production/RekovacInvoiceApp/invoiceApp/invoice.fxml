<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Tab?>
<?import javafx.scene.control.TabPane?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.layout.BorderPane?>

<BorderPane xmlns="http://javafx.com/javafx/8.0.121" xmlns:fx="http://javafx.com/fxml/1" fx:controller="invoiceApp.invoiceController">
    <center>
        <TabPane prefHeight="200.0" prefWidth="600.0" tabClosingPolicy="UNAVAILABLE">
            <tabs>
                <Tab text="Korisnici">
                    <content>
                        <BorderPane>
                            <center>
                                <TableView fx:id="tvKorisnik" prefHeight="200.0" prefWidth="200.0">
                                    <columns>
                                        <TableColumn fx:id="colIdKorisnik" prefWidth="75.0" text="idKorisnik" />
                                        <TableColumn fx:id="colImeKor" prefWidth="75.0" text="Ime" />
                                        <TableColumn fx:id="colPostaKor" prefWidth="75.0" text="Posta" />
                                        <TableColumn fx:id="colMestoKor" prefWidth="75.0" text="Mesto" />
                                        <TableColumn fx:id="colAdresaKor" prefWidth="75.0" text="Adresa" />
                                        <TableColumn fx:id="colPibKor" prefWidth="75.0" text="PIB" />
                                    </columns>
                                </TableView>
                            </center>
                        </BorderPane>
                    </content>
                </Tab>
                <Tab text="Firma">
                    <content>
                        <BorderPane>
                            <center>
                                <TableView fx:id="tvFirma" prefHeight="200.0" prefWidth="200.0">
                                    <columns>
                                        <TableColumn fx:id="colIdFirma" prefWidth="75.0" text="idFirma" />
                                        <TableColumn fx:id="colImeFirme" prefWidth="75.0" text="Ime Firme" />
                                        <TableColumn fx:id="colPosta" prefWidth="75.0" text="Posta" />
                                        <TableColumn fx:id="colMesto" prefWidth="75.0" text="Mesto" />
                                        <TableColumn fx:id="colAdresa" prefWidth="75.0" text="Adresa" />
                                        <TableColumn fx:id="colMaticniBroj" prefWidth="75.0" text="Maticni Broj" />
                                        <TableColumn fx:id="colPib" prefWidth="75.0" text="PIB" />
                                        <TableColumn fx:id="colSifraDelatnosti" prefWidth="75.0" text="Sifra Delatnosti" />
                                        <TableColumn fx:id="colTekuciRacun" prefWidth="75.0" text="Tekuci Racun" />
                                        <TableColumn fx:id="colKodBanke" prefWidth="75.0" text="Kod Banke" />
                                        <TableColumn fx:id="colEmail" prefWidth="75.0" text="Email" />
                                    </columns>
                                </TableView>
                            </center>
                        </BorderPane>
                    </content>
                </Tab>
            </tabs>
        </TabPane>
    </center>
</BorderPane>
